{
  "table_name": "pages_content",
  "description": "Page content storage for Ency schema - sorted by SiteName and roles",
  "columns": {
    "id": {
      "data_type": "integer",
      "is_auto_increment": true,
      "is_nullable": false,
      "description": "Primary key for the pages table"
    },
    "sitename": {
      "data_type": "varchar",
      "size": 255,
      "is_nullable": false,
      "description": "Site name the page belongs to (CSC, MCOOP, etc.)"
    },
    "menu": {
      "data_type": "varchar",
      "size": 255,
      "is_nullable": false,
      "description": "Menu category (Main, Admin, member, etc.)"
    },
    "page_code": {
      "data_type": "varchar",
      "size": 255,
      "is_nullable": false,
      "description": "Unique page code identifier"
    },
    "title": {
      "data_type": "varchar",
      "size": 255,
      "is_nullable": false,
      "description": "Page title displayed to users"
    },
    "body": {
      "data_type": "text",
      "is_nullable": false,
      "description": "Main page content body"
    },
    "description": {
      "data_type": "text",
      "is_nullable": true,
      "description": "Meta description for SEO"
    },
    "keywords": {
      "data_type": "text",
      "is_nullable": true,
      "description": "Meta keywords for SEO"
    },
    "link_order": {
      "data_type": "integer",
      "is_nullable": false,
      "default_value": 0,
      "description": "Order for displaying in navigation"
    },
    "status": {
      "data_type": "varchar",
      "size": 50,
      "is_nullable": false,
      "default_value": "active",
      "description": "Page status (active, inactive, draft)"
    },
    "roles": {
      "data_type": "varchar",
      "size": 255,
      "is_nullable": true,
      "default_value": "public",
      "description": "Required roles to view page (public, member, admin, etc.)"
    },
    "created_by": {
      "data_type": "varchar",
      "size": 255,
      "is_nullable": false,
      "description": "Username who created the page"
    },
    "created_at": {
      "data_type": "datetime",
      "is_nullable": false,
      "default_value": "CURRENT_TIMESTAMP",
      "description": "When page was created"
    },
    "updated_at": {
      "data_type": "datetime",
      "is_nullable": false,
      "default_value": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "description": "When page was last updated"
    }
  },
  "primary_key": ["id"],
  "unique_constraints": [
    {
      "name": "unique_page_code",
      "columns": ["page_code"]
    }
  ],
  "indexes": [
    {
      "name": "idx_sitename_menu",
      "columns": ["sitename", "menu"]
    },
    {
      "name": "idx_status",
      "columns": ["status"]
    },
    {
      "name": "idx_roles",
      "columns": ["roles"]
    },
    {
      "name": "idx_link_order",
      "columns": ["link_order"]
    }
  ],
