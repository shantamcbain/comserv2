                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>No Changelog Entries</h3>
                        <p>No changelog entries are currently available.</p>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        <!-- All Documentation Section - Alphabetical List (Admin Only) -->
        [% IF (display_role == 'Administrator' || user_role == 'admin') && categories.general && categories.general.pages.size > 0 %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">All Documentation Files</h2>
            <p>Complete alphabetical list of all documentation files. <span class="admin-only-badge">Admin Only</span></p>

            <!-- Group documentation by file type -->
            <div class="file-type-tabs">
                <button class="file-type-tab active" onclick="showFileType(event, 'all-docs')">All Files</button>
                <button class="file-type-tab" onclick="showFileType(event, 'template-docs')">Template Files (.tt)</button>
                <button class="file-type-tab" onclick="showFileType(event, 'markdown-docs')">Markdown Files (.md)</button>
                <button class="file-type-tab" onclick="showFileType(event, 'other-docs')">Other Files</button>
            </div>

            <div class="section-grid expanded file-type-content active" id="all-docs">
                [% # Sort page names alphabetically by title %]
                [% sorted_pages = [] %]
                [% FOREACH page_name IN categories.general.pages %]
                    [% IF structured_pages.$page_name %]
                        [% sorted_pages.push({
                            name => page_name,
                            title => structured_pages.$page_name.title
                        }) %]
                    [% END %]
                [% END %]

                [% # Sort the array alphabetically by title %]
                [% sorted_pages = sorted_pages.nsort('title') %]

                [% # Display the sorted pages %]
                [% FOREACH page_info IN sorted_pages %]
                    [% page_name = page_info.name %]
                    [% page = structured_pages.$page_name %]
                    <a href="[% page.url %]" class="documentation-card">
                        <h3>[% page.title %]</h3>
                        <p>[% page.description || 'Documentation file.' %]</p>
                        [% IF page.site != 'all' %]
                            <span class="site-badge">[% page.site %]</span>
                        [% END %]
                        [% IF page.file_type %]
                            <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                        [% END %]
                    </a>
                [% END %]
            </div>

            <!-- Template files tab content -->
            <div class="section-grid file-type-content" id="template-docs" style="display: none;">
                [% # Sort template files alphabetically by title %]
                [% template_pages = [] %]
                [% FOREACH page_name IN categories.general.pages %]
                    [% IF structured_pages.$page_name && structured_pages.$page_name.file_type == 'template' %]
                        [% template_pages.push({
