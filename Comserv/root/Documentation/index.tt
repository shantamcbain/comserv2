<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize sections that should be expanded by default
        document.querySelectorAll('.section-toggle.expanded').forEach(header => {
            const section = header.closest('.documentation-section, .recent-updates-section, .all-docs-section');
            const content = section.querySelector('.section-grid, .section-content');
            if (content) {
                content.style.maxHeight = content.scrollHeight + 'px';
                content.classList.add('expanded');
            }
        });

        // Add click event to section headers to toggle visibility
        document.querySelectorAll('.section-toggle').forEach(header => {
            header.addEventListener('click', function() {
                this.classList.toggle('expanded');
                const section = this.closest('.documentation-section, .recent-updates-section, .all-docs-section');
                const content = section.querySelector('.section-grid, .section-content');

                if (content) {
                    if (this.classList.contains('expanded')) {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        content.classList.add('expanded');
                    } else {
                        content.style.maxHeight = '0';
                        content.classList.remove('expanded');
                    }
                }
            });
        });
    });
</script>

