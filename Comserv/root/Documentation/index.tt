
[% PageVersion = 'Documentation/index.tt,v 1.4 2025/04/06 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[%# Determine user role for display %]
[% SET display_role = 'Guest' %]
[% IF c.session.roles %]
    [% IF c.session.roles.grep('admin').size %]
        [% SET display_role = 'Administrator' %]
    [% ELSIF c.session.roles.grep('developer').size %]
        [% SET display_role = 'Developer' %]
    [% ELSIF c.session.roles.grep('editor').size %]
        [% SET display_role = 'Editor' %]
    [% ELSIF c.session.roles.grep('user').size %]
        [% SET display_role = 'User' %]
    [% END %]
[% END %]

<div class="documentation-container">
    <h1>Comserv Documentation</h1>

    <div class="user-context">
        <div class="site-info">
            <span class="label">Current Site:</span>
            <span class="value">[% site_name || 'Comserv' %]</span>
        </div>
        <div class="role-info">
            <span class="label">User Role:</span>
            <span class="value">[% display_role %]</span>
        </div>
    </div>

    <p class="intro">Welcome to the Comserv documentation. Here you'll find information about the system, its features, and how to use them.</p>

    <div class="documentation-grid">
        [% IF categories.user_guides %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">User Documentation</h2>
            <p>Documentation for end users of the Comserv system.</p>
            <div class="section-grid expanded">
                [% IF categories.user_guides.pages.size > 0 %]
                    [% FOREACH page_name IN categories.user_guides.pages.sort %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'User guide for Comserv functionality.' %]</p>
                                [% IF page.site != 'all' %]
                                    <span class="site-badge">[% page.site %]</span>
                                [% END %]
                                [% IF page.file_type %]
                                    <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                                [% END %]
                            </a>
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>Account Management</h3>
                        <p>Learn how to manage your account, update your profile, and change your settings.</p>
                        <a href="[% c.uri_for('/Documentation/roles/normal/account_management.md') %]" class="card-link">Read More</a>
                        <span class="file-type-badge markdown">markdown</span>
                    </div>
                    <div class="documentation-card">
                        <h3>Getting Started</h3>
                        <p>A beginner's guide to using the Comserv system.</p>
                        <a href="[% c.uri_for('/Documentation/roles/normal/getting_started.md') %]" class="card-link">Read More</a>
                        <span class="file-type-badge markdown">markdown</span>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF categories.tutorials %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">Tutorials</h2>
            <p>Step-by-step guides for common tasks.</p>
            <div class="section-grid expanded">
                [% IF categories.tutorials.pages.size > 0 %]
                    [% FOREACH page_name IN categories.tutorials.pages.sort %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'Step-by-step tutorial for Comserv users.' %]</p>
                                [% IF page.site != 'all' %]
                                    <span class="site-badge">[% page.site %]</span>
                                [% END %]
                                [% IF page.file_type %]
                                    <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                                [% END %]
                            </a>
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>Login and Authentication</h3>
                        <p>Learn how to log in, log out, and manage your authentication settings.</p>
                        <a href="[% c.uri_for('/Documentation/tutorials/login_authentication.md') %]" class="card-link">Read More</a>
                        <span class="file-type-badge markdown">markdown</span>
                    </div>
                    <div class="documentation-card">
                        <h3>Customizing Your Profile</h3>
                        <p>A guide to personalizing your user profile and settings.</p>
                        <a href="[% c.uri_for('/Documentation/tutorials/customizing_profile.md') %]" class="card-link">Read More</a>
                        <span class="file-type-badge markdown">markdown</span>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF categories.site_specific %]
        <div class="documentation-section site-specific-section">
            <h2 class="section-toggle expanded">[% site_name || 'Comserv' %] Documentation</h2>
            <p>Documentation specific to the [% site_name || 'Comserv' %] site.</p>
            <div class="section-grid expanded">
                [% IF categories.site_specific.pages.size > 0 %]
                    [% FOREACH page_name IN categories.site_specific.pages %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'Site-specific documentation.' %]</p>
                                <span class="site-badge">[% page.site %]</span>
                            </a>
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>Site Overview</h3>
                        <p>An introduction to the [% site_name || 'Comserv' %] site and its features.</p>
                        <a href="[% c.uri_for('/Documentation/sites/' _ (site_name || 'comserv') _ '/overview.md') %]" class="card-link">Read More</a>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        <!-- Admin Documentation Sections - Only visible to administrators -->
        [% IF display_role == 'Administrator' || user_role == 'admin' %]

        <!-- Admin Guides Section -->
        [% IF categories.admin_guides %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">Administrator Guides</h2>
            <p>Documentation for system administrators. <span class="admin-only-badge">Admin Only</span></p>
            <div class="section-grid expanded">
                [% IF categories.admin_guides.pages.size > 0 %]
                    [% FOREACH page_name IN categories.admin_guides.pages.sort %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'Administrator documentation.' %]</p>
                                [% IF page.file_type %]
                                    <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                                [% END %]
                                <span class="role-badge admin">Administrators Only</span>
                            </a>
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>Admin Guide</h3>
                        <p>Guide for system administrators.</p>
                        <a href="[% c.uri_for('/Documentation/roles/admin/admin_guide.md') %]" class="card-link">Read More</a>
                        <span class="file-type-badge markdown">markdown</span>
                        <span class="role-badge admin">Administrators Only</span>
                    </div>
                    <div class="documentation-card">
                        <h3>User Management</h3>
                        <p>Guide for managing users in the system.</p>
                        <a href="[% c.uri_for('/Documentation/roles/admin/user_management.md') %]" class="card-link">Read More</a>
                        <span class="file-type-badge markdown">markdown</span>
                        <span class="role-badge admin">Administrators Only</span>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        <!-- Proxmox Documentation Section -->
        [% IF categories.proxmox %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">Proxmox Documentation</h2>
            <p>Documentation for Proxmox virtualization environment. <span class="admin-only-badge">Admin Only</span></p>
            <div class="section-grid expanded">
                [% IF categories.proxmox.pages.size > 0 %]
                    [% FOREACH page_name IN categories.proxmox.pages.sort %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'Proxmox virtualization documentation.' %]</p>
                                [% IF page.file_type %]
                                    <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                                [% END %]
                                <span class="role-badge admin">Administrators Only</span>
                            </a>
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>CD Visibility in Proxmox Linux VMs</h3>
                        <p>Guide to managing CD/DVD visibility and mounting in Proxmox Linux virtual machines.</p>
                        <a href="[% c.uri_for('/Documentation/proxmox/Proxmox_CD_Visibility.tt') %]" class="card-link">Read More</a>
                        <span class="file-type-badge template">template</span>
                        <span class="role-badge admin">Administrators Only</span>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        <!-- Controller Documentation Section -->
        [% IF categories.controllers %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">Controller Documentation</h2>
            <p>Documentation for system controllers. <span class="admin-only-badge">Admin Only</span></p>
            <div class="section-grid expanded">
                [% IF categories.controllers.pages.size > 0 %]
                    [% FOREACH page_name IN categories.controllers.pages.sort %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'Controller documentation.' %]</p>
                                [% IF page.file_type %]
                                    <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                                [% END %]
                                <span class="role-badge admin">Administrators Only</span>
                            </a>
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>No Controller Documentation</h3>
                        <p>No controller documentation is currently available.</p>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        <!-- Changelog Section -->
        [% IF categories.changelog %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded">Changelog</h2>
            <p>System changes and updates. <span class="admin-only-badge">Admin Only</span></p>
            <div class="section-grid expanded">
                [% IF categories.changelog.pages.size > 0 %]
                    [% FOREACH page_name IN categories.changelog.pages.sort %]
                        [% IF structured_pages.$page_name %]
                            [% page = structured_pages.$page_name %]
                            <a href="[% page.url %]" class="documentation-card">
                                <h3>[% page.title %]</h3>
                                <p>[% page.description || 'System change documentation.' %]</p>
                                [% IF page.file_type %]
                                    <span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>
                                [% END %]
                                <span class="role-badge admin">Administrators Only</span>
                            </a>
