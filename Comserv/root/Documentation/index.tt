[% PageVersion = 'Documentation/index.tt,v 1.3 2025/04/01 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<!-- Include documentation CSS -->
<link rel="stylesheet" href="/static/css/documentation.css">

[%# Determine user role for display from session roles array %]
[% SET display_role = 'Guest' %]
[% IF c.session.roles %]
    [% IF c.session.roles.grep('admin').size %]
        [% SET display_role = 'Administrator' %]
    [% ELSIF c.session.roles.grep('developer').size %]
        [% SET display_role = 'Developer' %]
    [% ELSIF c.session.roles.grep('editor').size %]
        [% SET display_role = 'Editor' %]
    [% ELSIF c.session.roles.grep('normal').size || c.session.roles.grep('user').size %]
        [% SET display_role = 'User' %]
    [% END %]
[% END %]

<div class="documentation-container">
    <h1>Our Documentation</h1>

    <div class="user-context">
        <div class="site-info">
            <span class="label">Current Site:</span>
            <span class="value">[% site_name || 'Comserv' %]</span>
        </div>
        <div class="role-info">
            <span class="label">User Role:</span>
            <span class="value">[% display_role %]</span>
        </div>
        [% IF c.session.roles.grep('admin').size || c.session.roles.grep('developer').size || c.session.debug_mode == 1 %]
        <div class="admin-actions">
            <a href="[% c.uri_for('/Documentation/refresh') %]" class="refresh-button">
                <i class="fas fa-sync-alt"></i> Refresh Documentation
            </a>
            <a href="[% c.uri_for('/Documentation/config') %]" class="config-button">
                <i class="fas fa-cogs"></i> Manage Configuration
            </a>
            <a href="[% c.uri_for('/Documentation/debug') %]" class="debug-button">
                <i class="fas fa-bug"></i> Debug Documentation
            </a>
            [% IF c.session.debug_mode == 1 %]
                <a href="[% c.uri_for('/toggle_debug_mode', { value => 0, return_url => c.req.uri }) %]" class="debug-mode-button active">
                    <i class="fas fa-toggle-on"></i> Debug Mode: ON
                </a>
            [% ELSE %]
                <a href="[% c.uri_for('/toggle_debug_mode', { value => 1, return_url => c.req.uri }) %]" class="debug-mode-button">
                    <i class="fas fa-toggle-off"></i> Debug Mode: OFF
                </a>
            [% END %]
        </div>
        [% END %]
    </div>

    [% IF status_msg %]
    <div class="status-message success">
        <i class="fas fa-check-circle"></i> [% status_msg %]
    </div>
    [% END %]

    [% IF c.session.debug_mode == 1 && debug_msg.size > 0 %]
    <div class="debug-messages">
        <h3><i class="fas fa-bug"></i> Debug Messages</h3>
        <ul>
            [% FOREACH msg IN debug_msg %]
                <li>[% msg %]</li>
            [% END %]
        </ul>
    </div>
    [% END %]

    <p class="intro">Welcome to the Our documentation. Here you'll find information about the system, its features, and how to use them.</p>

    <div class="documentation-grid">
        [% IF categories.user_guides %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded"><i class="fas fa-users"></i> User Documentation</h2>
            <p>Documentation for end users of the Comserv system.</p>
            <div class="section-grid expanded">
                [% IF categories.user_guides.pages.size > 0 %]
                    [% FOREACH page_id IN categories.user_guides.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').ucfirst %]</h3>
                            <p>[% categories.user_guides.description %]</p>
                            [% IF structured_pages.$page_id && structured_pages.$page_id.site != 'all' %]
                                <span class="site-badge">[% structured_pages.$page_id.site %]</span>
                            [% END %]
                        </a>
                    [% END %]
                [% ELSE %]
                    <!-- These are fallback links that should only appear if no pages are found in the category -->
                    <!-- Each link points directly to a specific file rather than using the view action -->
                    <div class="documentation-card">
                        <h3>Account Management</h3>
                        <p>Learn how to manage your account, update your profile, and change your settings.</p>
                        <a href="[% c.uri_for('/Documentation/view/account_management') %]" class="card-link">Read More</a>
                    </div>
                    <div class="documentation-card">
                        <h3>Getting Started</h3>
                        <p>A beginner's guide to using the Comserv system.</p>
                        <a href="[% c.uri_for('/Documentation/view/getting_started') %]" class="card-link">Read More</a>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF categories.tutorials %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded"><i class="fas fa-graduation-cap"></i> Tutorials</h2>
            <p>Step-by-step guides for common tasks.</p>
            <div class="section-grid expanded">
                [% IF categories.tutorials.pages.size > 0 %]
                    [% FOREACH page_id IN categories.tutorials.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').ucfirst %]</h3>
                            <p>[% categories.tutorials.description %]</p>
                            [% IF structured_pages.$page_id && structured_pages.$page_id.site != 'all' %]
                                <span class="site-badge">[% structured_pages.$page_id.site %]</span>
                            [% END %]
                        </a>
                    [% END %]
                [% ELSE %]
                    <!-- These are fallback links that should only appear if no pages are found in the category -->
                    <!-- Each link points directly to a specific file rather than using the view action -->
                    <div class="documentation-card">
                        <h3>Login and Authentication</h3>
                        <p>Learn how to log in, log out, and manage your authentication settings.</p>
                        <a href="[% c.uri_for('/Documentation/view/login_authentication') %]" class="card-link">Read More</a>
                    </div>
                    <div class="documentation-card">
                        <h3>Customizing Your Profile</h3>
                        <p>A guide to personalizing your user profile and settings.</p>
                        <a href="[% c.uri_for('/Documentation/view/customizing_profile') %]" class="card-link">Read More</a>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF categories.site_specific %]
        <div class="documentation-section site-specific-section">
            <h2 class="section-toggle expanded"><i class="fas fa-building"></i> [% site_name || 'Comserv' %] Documentation</h2>
            <p>Documentation specific to the [% site_name || 'Comserv' %] site.</p>
            <div class="section-grid expanded">
                [% IF categories.site_specific.pages.size > 0 %]
                    [% FOREACH page_id IN categories.site_specific.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').ucfirst %]</h3>
                            <p>[% categories.site_specific.description %] for [% site_name || 'Comserv' %].</p>
                            <span class="site-badge">[% site_name %]</span>
                        </a>
                    [% END %]
                [% ELSE %]
                    <!-- Site-specific fallback that uses the current site name -->
                    <div class="documentation-card">
                        <h3>Site Overview</h3>
                        <p>An introduction to the [% site_name || 'Comserv' %] site and its features.</p>
                        [% IF site_name == 'MCOOP' %]
                            <a href="[% c.uri_for('/Documentation/view/site_guide') %]" class="card-link">Read More</a>
                        [% ELSE %]
                            <a href="[% c.uri_for('/Documentation/view/site_overview') %]" class="card-link">Read More</a>
                        [% END %]
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF c.session.roles.grep('admin').size || c.session.roles.grep('developer').size || c.session.debug_mode == 1 %]
        [% IF categories.admin_guides %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded"><i class="fas fa-shield-alt"></i> Administrator Documentation</h2>
            <p>Documentation for system administrators.</p>
            <div class="section-grid expanded">
                [% IF categories.admin_guides.pages.size > 0 %]
                    [% FOREACH page_id IN categories.admin_guides.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').ucfirst %]</h3>
                            <p>[% categories.admin_guides.description %]</p>
                            [% IF structured_pages.$page_id && structured_pages.$page_id.site != 'all' %]
                                <span class="site-badge">[% structured_pages.$page_id.site %]</span>
                            [% END %]
                        </a>
                    [% END %]
                [% ELSE %]
                    <!-- Admin guide fallbacks -->
                    <div class="documentation-card">
                        <h3>User Management</h3>
                        <p>Learn how to manage users, roles, and permissions in the system.</p>
                        <a href="[% c.uri_for('/Documentation/view/user_management') %]" class="card-link">Read More</a>
                    </div>
                    <div class="documentation-card">
                        <h3>System Configuration</h3>
                        <p>Guide to configuring system settings and preferences.</p>
                        <a href="[% c.uri_for('/Documentation/view/system_configuration') %]" class="card-link">Read More</a>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF categories.developer_guides %]
        <div class="documentation-section">
            <h2 class="section-toggle expanded"><i class="fas fa-code"></i> Developer Documentation</h2>
            <p>Documentation for developers working on the Comserv system.</p>
            <div class="section-grid expanded">
                [% IF categories.developer_guides.pages.size > 0 %]
                    [% FOREACH page_id IN categories.developer_guides.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').ucfirst %]</h3>
                            <p>[% categories.developer_guides.description %]</p>
                            [% IF structured_pages.$page_id && structured_pages.$page_id.site != 'all' %]
                                <span class="site-badge">[% structured_pages.$page_id.site %]</span>
                            [% END %]
                        </a>
                    [% END %]
                [% ELSE %]
                    <!-- Developer guide fallbacks -->
                    <div class="documentation-card">
                        <h3>Authentication System</h3>
                        <p>Technical documentation for the authentication and user management system.</p>
                        <a href="[% c.uri_for('/Documentation/view/authentication_system') %]" class="card-link">Read More</a>
                    </div>
                    <div class="documentation-card">
                        <h3>Template System</h3>
                        <p>Guide to the Template Toolkit system used in Comserv.</p>
                        <a href="[% c.uri_for('/Documentation/view/template_system') %]" class="card-link">Read More</a>
                    </div>
                    <div class="documentation-card">
                        <h3>Troubleshooting</h3>
                        <p>Solutions for common development and system issues.</p>
                        <a href="[% c.uri_for('/Documentation/view/troubleshooting') %]" class="card-link">Read More</a>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]
        [% END %]

        [% IF categories.modules && (c.session.roles.grep('admin').size || c.session.roles.grep('developer').size || c.session.debug_mode == 1) %]
        <div class="documentation-section">
            <h2 class="section-toggle"><i class="fas fa-puzzle-piece"></i> Module Documentation</h2>
            <p>Documentation for specific system modules.</p>
            <div class="section-grid">
                [% IF categories.modules.pages.size > 0 %]
                    [% FOREACH page_id IN categories.modules.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').ucfirst %]</h3>
                            <p>[% categories.modules.description %]</p>
                            [% IF structured_pages.$page_id && structured_pages.$page_id.site != 'all' %]
                                <span class="site-badge">[% structured_pages.$page_id.site %]</span>
                            [% END %]
                        </a>
                    [% END %]
                [% ELSE %]
                    <!-- Module documentation fallbacks -->
                    <div class="documentation-card">
                        <h3>User Module</h3>
                        <p>Technical documentation for the User module.</p>
                        <a href="[% c.uri_for('/Documentation/view/user_module') %]" class="card-link">Read More</a>
                    </div>
                    <div class="documentation-card">
                        <h3>Documentation Module</h3>
                        <p>Guide to the Documentation system and its features.</p>
                        <a href="[% c.uri_for('/Documentation/view/documentation_system') %]" class="card-link">Read More</a>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]

        [% IF categories.templates && (c.session.roles.grep('admin').size || c.session.roles.grep('developer').size || c.session.debug_mode == 1) %]
        <div class="documentation-section">
            <h2 class="section-toggle"><i class="fas fa-file-code"></i> Template Documentation</h2>
            <p>Documentation in template format.</p>
            <div class="section-grid">
                [% IF categories.templates.pages.size > 0 %]
                    [% FOREACH page_id IN categories.templates.pages %]
                        <a href="[% c.uri_for('/Documentation/view', { page_id => page_id }) %]" class="documentation-card">
                            <h3>[% page_id.replace('_', ' ').replace('_tt', '').ucfirst %]</h3>
                            <p>[% categories.templates.description %]</p>
                            [% IF structured_pages.$page_id && structured_pages.$page_id.site != 'all' %]
                                <span class="site-badge">[% structured_pages.$page_id.site %]</span>
                            [% END %]
                            <span class="format-badge">Template</span>
                        </a>
                    [% END %]
                [% ELSE %]
                    <div class="documentation-card">
                        <h3>No Template Documentation</h3>
                        <p>No template documentation files are currently available.</p>
                    </div>
                [% END %]
            </div>
        </div>
        [% END %]
    </div>

    <div class="recent-updates-section">
        <h2 class="section-toggle expanded"><i class="fas fa-history"></i> Recent Updates</h2>
        <div class="section-content expanded">
            <p>Recent updates to the Comserv system and documentation.</p>

            [% IF completed_items.size > 0 %]
                <ul class="recent-updates">
                    [% FOREACH item IN completed_items.slice(0, 9) %]
                        <li>
                            <span class="update-date">[% item.date_created || '2024-05-31' %]</span>
                            <span class="update-title">[% item.title || 'System Update' %]</span>
                            [% IF item.description %]
                                <span class="update-description">[% item.description %]</span>
                            [% ELSE %]
                                <span class="update-description">System and documentation updates to improve functionality and user experience.</span>
                            [% END %]
                        </li>
                    [% END %]
                </ul>
                <a href="[% c.uri_for('/Documentation/recent_updates') %]" class="view-all-link">View all updates</a>
            [% ELSE %]
                <ul class="recent-updates">
                    <li>
                        <span class="update-date">2024-05-31</span>
                        <span class="update-title">Authentication System Updates</span>
                        <span class="update-description">Fixed logout functionality and improved user profile management.</span>
                    </li>
                    <li>
                        <span class="update-date">2024-05-31</span>
                        <span class="update-title">Template System Improvements</span>
                        <span class="update-description">Enhanced footer display and error handling in templates.</span>
                    </li>
                    <li>
                        <span class="update-date">2024-05-31</span>
                        <span class="update-title">Documentation System Overhaul</span>
                        <span class="update-description">Comprehensive documentation added for users, administrators, and developers.</span>
                    </li>
                </ul>
            [% END %]
        </div>
    </div>

    [% IF display_role == 'Administrator' || display_role == 'Developer' || c.session.debug_mode == 1 %]
    <div class="all-docs-section">
        <h2 class="section-toggle"><i class="fas fa-list"></i> All Documentation Pages</h2>
        <div class="section-content">
            [% IF sorted_page_names.size > 0 %]
                <ul class="documentation-list">
                    [% FOREACH page_name IN sorted_page_names %]
                        [% page = structured_pages.$page_name %]
                        <li>
                            <a href="[% page.url %]">[% page.title %]</a>
                            [% IF page.site != 'all' %]
                                <span class="site-badge">[% page.site %]</span>
                            [% END %]
                        </li>
                    [% END %]
                </ul>
            [% ELSE %]
                <ul class="documentation-list">
                    <li><a href="[% c.uri_for('/Documentation/roles/normal/account_management.md') %]">Account Management Guide</a></li>
                    <li><a href="[% c.uri_for('/Documentation/roles/admin/user_management.md') %]">User Management Guide for Administrators</a></li>
                    <li><a href="[% c.uri_for('/Documentation/developer/authentication_system.md') %]">Authentication System Documentation</a></li>
                    <li><a href="[% c.uri_for('/Documentation/developer/template_system.md') %]">Template System Documentation</a></li>
                    <li><a href="[% c.uri_for('/Documentation/developer/troubleshooting.md') %]">Troubleshooting Guide for Developers</a></li>
                </ul>
            [% END %]
        </div>
    </div>
    [% END %]
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize sections that should be expanded by default
        document.querySelectorAll('.section-toggle.expanded').forEach(header => {
            const section = header.closest('.documentation-section, .recent-updates-section, .all-docs-section');
            const content = section.querySelector('.section-grid, .section-content');
            if (content) {
                content.style.maxHeight = content.scrollHeight + 'px';
                content.classList.add('expanded');
            }
        });

        // Add click event to section headers to toggle visibility
        document.querySelectorAll('.section-toggle').forEach(header => {
            header.addEventListener('click', function() {
                this.classList.toggle('expanded');
                const section = this.closest('.documentation-section, .recent-updates-section, .all-docs-section');
                const content = section.querySelector('.section-grid, .section-content');

                if (content.classList.contains('expanded')) {
                    content.style.maxHeight = null;
                    content.classList.remove('expanded');
                } else {
                    content.style.maxHeight = content.scrollHeight + 'px';
                    content.classList.add('expanded');
                }
            });
        });
    });
</script>
