                [% FOREACH page_name IN categories.general.pages %]
                    [% IF structured_pages.$page_name && structured_pages.$page_name.file_type == 'other' %]
                        [% other_pages.push({
                            name => page_name,
                            title => structured_pages.$page_name.title
                        }) %]
