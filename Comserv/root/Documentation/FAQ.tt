        line-height: 1.6;
    }
    
    .doc-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #ddd;
    }
    
    .doc-header h1 {
        margin-bottom: 10px;
        color: #0056b3;
    }
    
    .doc-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        font-size: 0.9em;
        color: #666;
    }
    
    .doc-section {
        margin-bottom: 30px;
    }
    
    .doc-section h2 {
        color: #0056b3;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 1px solid #eee;
    }
    
    .faq-item {
        margin-bottom: 20px;
