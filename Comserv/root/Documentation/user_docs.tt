[% PageVersion = 'Comserv/root/Documentation/user_docs.tt,v 0.01 2025/06/10 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'User Docs' %]

<!-- Documentation page for User Docs -->
[% IF categories.user_guides %]
    <section class="section">
        <h2 class="section-header toggle">User Documentation</h2>
        <div class="section-content collapsible">
            <p>Essential guides for Comserv users.</p>
            <div class="grid">
                [% FOREACH page_name IN categories.user_guides.pages.sort %]
                    [% IF structured_pages.$page_name %]
                        [% page = structured_pages.$page_name %]
                        <a href="[% page.url %]" class="card">
                            <h3>[% page.title %]</h3>
                            <p>[% page.description || 'User guide for Comserv functionality.' %]</p>
                        </a>
                    [% END %]
                [% END %]
            </div>
        </div>
    </section>
[% END %]
