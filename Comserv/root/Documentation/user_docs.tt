[% PageVersion = 'Comserv/root/Documentation/user_docs.tt,v 0.02 2025/01/20 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'User Documentation' %]

<!-- User Documentation Section -->
[% IF categories.user_guides %]
    <div class="quick-actions">
        <h3><i class="fas fa-users"></i>User Documentation</h3>
        <p>Essential guides for Comserv users.</p>
    </div>
    
    <div class="feature-grid">
        [% FOREACH page_name IN categories.user_guides.pages.sort %]
            [% IF structured_pages.$page_name %]
                [% page = structured_pages.$page_name %]
                <div class="feature-card">
                    <div class="feature-header">
                        <h4><i class="fas fa-file-alt feature-icon"></i>[% page.title %]</h4>
                    </div>
                    <div class="feature-content">
                        <p>[% page.description || 'User guide for Comserv functionality.' %]</p>
                    </div>
                    <div class="feature-actions">
                        <a href="[% page.url %]" class="btn btn-primary">
                            <i class="fas fa-arrow-right"></i>View Guide
                        </a>
                    </div>
                </div>
            [% END %]
        [% END %]
    </div>
[% END %]
