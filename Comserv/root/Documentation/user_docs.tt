[% IF categories.user_guides %]
<section class="doc-section">
    <h2 class="section-toggle">User Documentation</h2>
    <p>Essential guides for Comserv users.</p>
    <div class="section-content">
        [% FOREACH page_name IN categories.user_guides.pages.sort %]
            [% IF structured_pages.$page_name %]
                [% page = structured_pages.$page_name %]
            <a href="[% page.url %]" class="doc-card">
                <h3>[% page.title %]</h3>
                <p>[% page.description || 'User guide for Comserv functionality.' %]</p>
                [% IF page.site != 'all' %]<span class="site-badge">[% page.site %]</span>[% END %]
                [% IF page.file_type %]<span class="file-type-badge [% page.file_type %]">[% page.file_type %]</span>[% END %]
            </a>
            [% END %]
        [% END %]
    </div>
</section>
[% END %]