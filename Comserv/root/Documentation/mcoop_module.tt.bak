    $self->logging->log_with_details($c, 'info', __FILE__, __LINE__, 'server_room_plan_hyphen_lowercase', 'Lowercase mcoop URL accessed');

    $c->forward('server_room_plan');

}



<h1>Handle lowercase mcoop URLs with underscore</h1>

