    }
    
    .error-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 15px;
    }
    
    .action-button {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        transition: background-color 0.2s;
    }
    
    .action-button.primary {
        background-color: #0066cc;
        color: white;
    }
    
    .action-button.primary:hover {
        background-color: #0055aa;
    }
    
    .action-button.secondary {
        background-color: #f8f9fa;
        color: #333;
        border: 1px solid #ddd;
    }
    
    .action-button.secondary:hover {
        background-color: #e9ecef;
    }
    
    .user-context {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 10px;
        margin: 20px 0;
        padding: 15px;
        background-color: #f0f7ff;
        border-radius: 5px;
        font-size: 0.9em;
    }

    .site-info, .role-info, .session-info, .session-roles-info {
        display: flex;
        align-items: center;
        padding: 5px 0;
    }

    .label {
        font-weight: bold;
        margin-right: 5px;
        color: #555;
    }

    .value {
        color: #0066cc;
        font-weight: bold;
        text-transform: capitalize;
    }

    .debug-section {
        background-color: #f8f9fa;
        border-left: 4px solid #17a2b8;
        padding: 15px;
        margin: 20px 0;
        text-align: left;
        border-radius: 4px;
    }

    .debug-section h2 {
        color: #17a2b8;
        font-size: 1.2em;
        margin-top: 0;
    }

    .debug-section ul {
        margin: 10px 0;
        padding-left: 20px;
    }

    .debug-section li {
        margin-bottom: 5px;
        font-family: monospace;
        font-size: 0.9em;
    }

    .debug-actions {
        margin-top: 15px;
        display: flex;
        gap: 10px;
    }
    
    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .documentation-error {
            margin: 20px auto;
        }
        
        .error-container {
            padding: 20px;
        }
        
        .error-actions {
            flex-direction: column;
            gap: 10px;
        }
        
        .user-context {
            flex-direction: column;
            gap: 5px;
        }
    }
</style>[% META title = 'Documentation Error' %]

