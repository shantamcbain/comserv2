[% PageVersion = 'Documentation/error.tt,v 1.1 2025/04/01 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Documentation Error' %]

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Documentation CSS is now included in the theme system -->

<div class="apiary-container">
    <header class="apiary-header">
        <h1><i class="fas fa-exclamation-triangle"></i> Documentation Error</h1>
        <div class="apiary-context">
            <span class="context-item"><strong>Site:</strong> [% site_name || 'default' %]</span>
            <span class="context-item"><strong>User:</strong> [% c.session.username || 'Not logged in' %]</span>
        </div>
    </header>

    <div class="alert alert-warning">
        <h3>Error</h3>
        [% IF error_msg %]
            <p>[% error_msg %]</p>
        [% ELSE %]
            <p>An error occurred while accessing the documentation.</p>
        [% END %]
    </div>

        <div class="user-context">
            <div class="site-info">
                <span class="label">Current Site:</span>
                <span class="value">[% site_name || 'default' %]</span>
            </div>
            <div class="role-info">
                <span class="label">Roles:</span>
                <span class="value">
                    [% IF user_roles && user_roles.size > 0 %]
                        [% user_roles.join(', ') %]
                    [% ELSE %]
                        No roles defined
                    [% END %]
                </span>
            </div>
            <div class="session-info">
                <span class="label">Username:</span>
                <span class="value">[% c.session.username || 'Not logged in' %]</span>
            </div>
            <div class="session-roles-info">
                <span class="label">Session Roles:</span>
                <span class="value">
                    [% IF session_roles && session_roles.size > 0 %]
                        [% session_roles.join(', ') %]
                    [% ELSIF c.session.roles && c.session.roles.size > 0 %]
                        [% c.session.roles.join(', ') %]
                    [% ELSE %]
                        No session roles found
                    [% END %]
                </span>
            </div>
        </div>

        [% # Check if user has admin or developer role - for showing debug information
           has_debug_access = 0;
           IF c.session.debug_mode == 1;
               has_debug_access = 1;
           ELSIF user_roles && user_roles.size > 0;
               FOREACH role IN user_roles;
                   IF role == 'admin' || role == 'developer';
                       has_debug_access = 1;
                   END;
               END;
           ELSIF c.session.roles && c.session.roles.size > 0;
               FOREACH role IN c.session.roles;
                   IF role == 'admin' || role == 'developer';
                       has_debug_access = 1;
                   END;
               END;
           END;
           IF has_debug_access %]
        <div class="debug-section">
            <h2>Debug Information</h2>
            <p>The documentation system is looking for your file in the following locations:</p>
            <ul>
                <li>Documentation/[% page_name %].tt</li>
                <li>Documentation/[% page_name %].md</li>
                <li>Documentation/roles/user/[% page_name %].tt</li>
                <li>Documentation/roles/admin/[% page_name %].tt</li>
                <li>Documentation/roles/developer/[% page_name %].tt</li>
                <li>Documentation/tutorials/[% page_name %].tt</li>
                <li>Documentation/sites/[% site_name %]/[% page_name %].tt</li>
            </ul>

            <div class="debug-actions">
                <a href="[% c.uri_for('/Documentation/refresh') %]" class="refresh-button">
                    <i class="fas fa-sync-alt"></i> Refresh Documentation
                </a>
                <a href="[% c.uri_for('/Documentation/debug') %]" class="debug-button">
                    <i class="fas fa-bug"></i> Debug Documentation
                </a>
            </div>
        </div>
        [% END %]

        <div class="error-help">
            <h2>What might have happened?</h2>
            <ul>
                <li>The documentation page you requested doesn't exist</li>
                <li>You don't have permission to access this documentation</li>
                <li>The documentation is specific to another site</li>
                <li>The documentation requires a higher user role</li>
            </ul>
        </div>

    <div class="quick-actions">
        <h3><i class="fas fa-tools"></i> Available Actions</h3>
        <div class="action-buttons">
            <a href="[% c.uri_for('/Documentation') %]" class="btn btn-primary"><i class="fas fa-home"></i> Return to Documentation Home</a>
            <a href="javascript:history.back()" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </div>
</div>

