[% PageVersion = 'Comserv/root/Documentation/tutorials.tt,v 0.02 2025/01/20 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Tutorials' %]

<!-- Tutorials Section -->
[% IF categories.tutorials %]
    <div class="section">
        <div class="section-header collapsible-header" onclick="toggleSection('tutorials-section')">
            <h3><i class="fas fa-graduation-cap"></i>Tutorials <span class="toggle-icon"></span></h3>
        </div>
        <div id="tutorials-section" class="section-content collapsible-content" style="display: none;">
            <p>Step-by-step instructions for common tasks.</p>
            
            <div class="feature-grid">
        [% FOREACH page_name IN categories.tutorials.pages.sort %]
            [% IF structured_pages.$page_name %]
                [% page = structured_pages.$page_name %]
                <div class="feature-card">
                    <div class="feature-header">
                        <h4><i class="fas fa-play-circle feature-icon"></i>[% page.title %]</h4>
                    </div>
                    <div class="feature-content">
                        <p>[% page.description || 'Step-by-step tutorial for Comserv users.' %]</p>
                    </div>
                    <div class="feature-actions">
                        <a href="[% page.url %]" class="btn btn-primary">
                            <i class="fas fa-arrow-right"></i>Start Tutorial
                        </a>
                    </div>
                </div>
            [% END %]
        [% END %]
            </div>
        </div>
    </div>
[% END %]
