}

.development-planning h3 i {
    color: var(--apiary-warning);
    margin-right: 15px;
}

.planning-intro {
    background: linear-gradient(135deg, #fff8e1 0%, #fffbf0 100%);
    padding: 20px;
    border-radius: 8px;
