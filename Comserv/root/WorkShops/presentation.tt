[% PageVersion = 'WorkShops/presentation.tt,v 0.01 2024/06/10 shanta Exp shanta ' %]
[% IF debug_mode == 1 %]
 [% PageVersion %]
[% END %]

<div class="workshop-presentation">
    <h1>[% presentation.title %]</h1>
    
    <div class="presentation-details">
        <p><strong>Description:</strong> [% presentation.description %]</p>
        <p><strong>Created by:</strong> [% presentation.author %]</p>
        <p><strong>Date:</strong> [% presentation.date %]</p>
    </div>
    
    <div class="presentation-actions">
        <h2>Download Options</h2>
        <ul>
            <li><a href="/workshop/download?file=[% presentation.filename %]" class="download-button">Download PowerPoint Presentation</a></li>
        </ul>
        
        [% IF presentation.html_version %]
        <h2>View Online</h2>
        <a href="/workshop/view?file=[% presentation.html_version %]" class="view-button">View Presentation in Browser</a>
        [% END %]
    </div>
    
    [% IF presentation.preview_image %]
    <div class="presentation-preview">
        <h2>Preview</h2>
        <img src="/WorkShops/images/[% presentation.preview_image %]" alt="Presentation Preview" class="preview-image">
    </div>
    [% END %]
    
    <div class="presentation-content">
        <h2>Presentation Summary</h2>
        [% presentation.summary %]
    </div>
</div>

<style>
    .workshop-presentation {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .presentation-details {
        background-color: #f5f5f5;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
    
    .presentation-actions {
        margin: 20px 0;
    }
    
    .download-button, .view-button {
        display: inline-block;
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        margin: 5px 0;
    }
    
    .download-button:hover, .view-button:hover {
        background-color: #45a049;
    }
    
    .preview-image {
        max-width: 100%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
    }
    
    .presentation-content {
        margin-top: 30px;
        line-height: 1.6;
    }
</style>