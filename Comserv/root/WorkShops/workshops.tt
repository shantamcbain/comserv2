[% PageVersion	= 'WorkShops/workshops.tt,v 0.01 2024/01/08 shanta Exp shanta '	%]
[% IF debug_mode == 1 %]
 [%	PageVersion %]
 [% INCLUDE debug.tt %]
[% END %]

<h1>Workshops</h1>
<a href="/workshop/add">Add Workshop</a>

<form method="GET" action="/workshop">
    <label for="filter_date">Filter by Date:</label>
    <input type="date" name="filter_date" value="[% filter_date %]">
    <input type="submit" value="Filter">
</form>

<table>
    <tr>
        <th>SiteName</th>
        <th>Date of Workshop</th>
        <th>Time</th>
        <th>End Time</th>
        <th>Location</th>
        <th>Title</th>
        <th>Details</th>
        <th>Max/Min Attendees</th>
        <th>Actions</th>
    </tr>
    [% FOREACH workshop IN workshops %]
    <tr>
        <td>[% workshop.sitename %]</td>
        <td>[% workshop.date %]</td>
        <td>[% workshop.time %]</td>
        <td>[% workshop.location %]</td>
        <td>[% workshop.title %]</td>
        <td>[% workshop.description %]</td>
        <td>[% workshop.6 %]</td>
        <td>[% workshop.7 %]</td>
        <td>
            [% IF c.session.roles == 'admin' %]
            <form action="/workshop/details" method="POST">
                <input type="hidden" name="id" value="[% workshop.id %]">
                <input type="submit" value="Edit">
            </form>
            <form action="/workshop/delete" method="POST">
                <input type="hidden" name="id" value="[% workshop.id %]">
                <input type="submit" value="Delete">
            </form>
            [% END %]
        </td>
    </tr>
    [% END %]
</table>
[% IF error %]
    <p class="error">[% error %]</p>
[% END %]
