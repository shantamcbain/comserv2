[% META title = 'Site Management' %]
[% PageVersion	= 'site/index.tt,v 0.02.01 2025/01/27 shanta Exp shanta '	%]
[% IF debug_mode == 1 %]
 [%	PageVersion %]
 [% IF debug_msg %]<div class="debug-message">[% debug_msg %]</div>[% END %]
[% END %]

<div class="apiary-container">
    <header class="apiary-header">
        <h1><i class="fas fa-sitemap"></i> Site Management</h1>
        <div class="apiary-context">
            <span class="context-item"><strong>Total Sites:</strong> [% sites.size || 0 %]</span>
            <span class="context-item"><strong>Access Level:</strong> [% user_access_level || 'Standard' %]</span>
        </div>
    </header>

    [% IF help_message || account_message || main_website %]
    <div class="info-cards">
        [% IF help_message %]
        <div class="info-card">
            <div class="info-icon"><i class="fas fa-question-circle"></i></div>
            <h3>Help Information</h3>
            <p>[% help_message %]</p>
        </div>
        [% END %]

        [% IF account_message %]
        <div class="info-card">
            <div class="info-icon"><i class="fas fa-user-circle"></i></div>
            <h3>Account Information</h3>
            <p>[% account_message %]</p>
        </div>
        [% END %]

        [% IF main_website %]
        <div class="info-card">
            <div class="info-icon"><i class="fas fa-external-link-alt"></i></div>
            <h3>Main Website</h3>
            <p><a href="[% main_website %]" target="_blank">[% main_website %]</a></p>
        </div>
        [% END %]
    </div>
    [% END %]

    <div class="quick-actions">
        <h3><i class="fas fa-plus"></i>Quick Actions</h3>
        <div class="action-buttons">
            <button type="button" class="btn btn-primary" onclick="window.open('/site/add_site_form', '_blank');">
                <i class="fas fa-plus"></i>Add New Site
            </button>
        </div>
    </div>

    [% IF sites.size > 0 %]
        <div class="feature-card">
            <div class="feature-header">
                <h3><i class="fas fa-list"></i>Available Sites</h3>
            </div>
            <div class="feature-content">
                <div class="sites-list">
                    [% FOREACH site IN sites %]
                        <div class="site-item">
                            <a href="/site/details?id=[% site.id %]" class="btn btn-outline">
                                <i class="fas fa-server"></i>[% site.id %] - [% site.name %]
                            </a>
                        </div>
                    [% END %]
                </div>
            </div>
        </div>
    [% ELSE %]
        <div class="alert alert-info">
            <h3><i class="fas fa-info-circle"></i>No Sites Available</h3>
            <p>No sites are available for your current access level. Contact your administrator if you need access to additional sites.</p>
        </div>
    [% END %]
</div>
