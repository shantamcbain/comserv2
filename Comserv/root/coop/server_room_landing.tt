[% USE Date %]
<div class="container">
    <header>
        <div class="header-banner">
            <h2 class="header-logo">MONASHEE COOP</h2>
        </div>
        <h1>Server Room & Computer System Overview</h1>
        <p>Date: [% Date.format(Date.now, '%Y-%m-%d') %]</p>
    </header>

    <div class="info-panel">
        [% IF help_message %]
            <div class="help-message">
