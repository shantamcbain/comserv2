[% PageVersion = 'Documentation/suggest_edit.tt,v 0.01 2024/05/31 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Suggest Edit - ' _ title %]

<div class="suggest-edit-container">
    <h1>Suggest Edit for "[% title %]"</h1>
    
    [% IF success_msg %]
        <div class="success-message">
            [% success_msg %]
            <p>Thank you for helping improve our documentation!</p>
            <a href="[% c.uri_for('/Documentation', [page]) %]" class="button">Return to Documentation</a>
        </div>
    [% ELSE %]
        <div class="edit-instructions">
            <p>Use the form below to suggest improvements to this documentation page. Your suggestions will be reviewed by our team.</p>
            <p>You can edit the content directly in the text area below. Please provide a brief explanation of your changes in the "Reason for Changes" field.</p>
        </div>
        
        <form action="[% c.uri_for('/Documentation/suggest_edit', [page]) %]" method="POST" class="edit-form">
            <div class="form-group">
                <label for="name">Your Name (optional)</label>
                <input type="text" id="name" name="name" class="form-input">
            </div>
            
            <div class="form-group">
                <label for="email">Your Email (optional)</label>
                <input type="email" id="email" name="email" class="form-input">
            </div>
            
            <div class="form-group">
                <label for="suggestion">Suggested Content</label>
                <textarea id="suggestion" name="suggestion" class="form-textarea" rows="20" required>[% content %]</textarea>
            </div>
            
            <div class="form-group">
                <label for="reason">Reason for Changes</label>
                <textarea id="reason" name="reason" class="form-textarea" rows="4" required placeholder="Please explain why you're suggesting these changes..."></textarea>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="submit-button">Submit Suggestion</button>
                <a href="[% c.uri_for('/Documentation', [page]) %]" class="cancel-button">Cancel</a>
            </div>
        </form>
        
        <div class="edit-tips">
            <h3>Editing Tips</h3>
            <ul>
                <li>Keep the same general structure and formatting</li>
                <li>Use clear, concise language</li>
                <li>Check spelling and grammar</li>
                <li>Include code examples where appropriate</li>
                <li>Provide links to related documentation</li>
            </ul>
        </div>
    [% END %]
</div>

<style>
    .suggest-edit-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }
    
    h1 {
        color: #0066cc;
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
    }
    
    .edit-instructions {
        margin: 20px 0;
        padding: 15px;
        background-color: #f0f7ff;
        border-radius: 5px;
        border-left: 4px solid #0066cc;
    }
    
    .edit-form {
        margin: 20px 0;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #333;
    }
    
    .form-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }
    
    .form-textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
        font-family: 'Courier New', Courier, monospace;
    }
    
    .form-actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }
    
    .submit-button {
        padding: 10px 20px;
        background-color: #0066cc;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }
    
    .submit-button:hover {
        background-color: #0055aa;
    }
    
    .cancel-button {
        padding: 10px 20px;
        background-color: #f5f5f5;
        color: #333;
        border: 1px solid #ddd;
        border-radius: 4px;
        text-decoration: none;
        font-size: 16px;
        text-align: center;
    }
    
    .cancel-button:hover {
        background-color: #e9e9e9;
    }
    
    .edit-tips {
        margin-top: 30px;
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }
    
    .edit-tips h3 {
        color: #333;
        margin-top: 0;
    }
    
    .success-message {
        margin: 20px 0;
        padding: 20px;
        background-color: #e6f7e6;
        border-radius: 5px;
        border-left: 4px solid #4CAF50;
        text-align: center;
    }
    
    .button {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        background-color: #0066cc;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }
    
    .button:hover {
        background-color: #0055aa;
    }
    
    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .suggest-edit-container {
            padding: 15px;
        }
        
        .form-actions {
            flex-direction: column;
        }
        
        .submit-button, .cancel-button {
            width: 100%;
        }
    }
</style>