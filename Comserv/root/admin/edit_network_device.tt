[% PageVersion = 'edit_network_device.tt,v 1.0 2025/05/31 shanta Exp shanta' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
    [% INCLUDE 'debug.tt' %]
[% END %]

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Edit Network Device</h1>
            <p class="lead">Update information for device: [% device.device_name %]</p>
            
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="[% c.uri_for('/admin') %]">Admin Home</a></li>
                    <li class="breadcrumb-item"><a href="[% c.uri_for('/admin/network_devices') %]">Network Devices</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Device</li>
                </ol>
            </nav>
            
            [% IF error_msg %]
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    [% error_msg %]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            [% END %]
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4>Edit Device Information</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="[% c.uri_for('/admin/edit_network_device', device.id) %]">
                        <div class="form-group row">
                            <label for="device_name" class="col-sm-3 col-form-label">Device Name *</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="device_name" name="device_name" value="[% device.device_name %]" required>
                                <small class="form-text text-muted">A descriptive name for the device</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="ip_address" class="col-sm-3 col-form-label">IP Address *</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="ip_address" name="ip_address" value="[% device.ip_address %]" required pattern="^([0-9]{1,3}\.){3}[0-9]{1,3}$">
                                <small class="form-text text-muted">The static IP address assigned to the device (e.g., 192.168.1.1)</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="mac_address" class="col-sm-3 col-form-label">MAC Address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="mac_address" name="mac_address" value="[% device.mac_address %]" pattern="^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$">
                                <small class="form-text text-muted">The hardware MAC address (e.g., 00:11:22:33:44:55)</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="device_type" class="col-sm-3 col-form-label">Device Type</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="device_type" name="device_type">
                                    <option value="">Select a type...</option>
                                    <option value="Router" [% IF device.device_type == 'Router' %]selected[% END %]>Router</option>
                                    <option value="Switch" [% IF device.device_type == 'Switch' %]selected[% END %]>Switch</option>
                                    <option value="Access Point" [% IF device.device_type == 'Access Point' %]selected[% END %]>Access Point</option>
                                    <option value="Server" [% IF device.device_type == 'Server' %]selected[% END %]>Server</option>
                                    <option value="Firewall" [% IF device.device_type == 'Firewall' %]selected[% END %]>Firewall</option>
                                    <option value="Workstation" [% IF device.device_type == 'Workstation' %]selected[% END %]>Workstation</option>
                                    <option value="Printer" [% IF device.device_type == 'Printer' %]selected[% END %]>Printer</option>
                                    <option value="IoT Device" [% IF device.device_type == 'IoT Device' %]selected[% END %]>IoT Device</option>
                                    <option value="Other" [% IF device.device_type == 'Other' %]selected[% END %]>Other</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="location" class="col-sm-3 col-form-label">Location</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="location" name="location" value="[% device.location %]">
                                <small class="form-text text-muted">Where the device is physically located</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="site_name" class="col-sm-3 col-form-label">Site *</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="site_name" name="site_name" required>
                                    <option value="">Select a site...</option>
                                    [% FOREACH site IN sites %]
                                        <option value="[% site.name %]" [% IF device.site_name == site.name %]selected[% END %]>[% site.name %]</option>
                                    [% END %]
                                </select>
                                <small class="form-text text-muted">Which site/client the device belongs to</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="purpose" class="col-sm-3 col-form-label">Purpose</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="purpose" name="purpose" value="[% device.purpose %]">
                                <small class="form-text text-muted">What the device is used for</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="notes" class="col-sm-3 col-form-label">Notes</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" id="notes" name="notes" rows="3">[% device.notes %]</textarea>
                                <small class="form-text text-muted">Any additional information about the device</small>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Update Device
                                </button>
                                <a href="[% c.uri_for('/admin/network_devices') %]" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4>Device Information</h4>
                </div>
                <div class="card-body">
                    <p><strong>Device ID:</strong> [% device.id %]</p>
                    <p><strong>Created:</strong> [% device.created_at %]</p>
                    <p><strong>Last Updated:</strong> [% device.updated_at || 'Never' %]</p>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Help</h4>
                </div>
                <div class="card-body">
                    <p>Use this form to update information for an existing network device.</p>
                    <p>Fields marked with an asterisk (*) are required.</p>
                    <h5>Tips:</h5>
                    <ul>
                        <li>Use descriptive names for devices to make them easy to identify</li>
                        <li>Always assign static IP addresses to network infrastructure devices</li>
                        <li>Document the MAC address for easier identification on the network</li>
                        <li>Include detailed notes about configuration, access credentials, or special requirements</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

[% IF c.session.debug_mode == 1 %]
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Debug Information
            </div>
            <div class="card-body">
                <p>Page Version: [% PageVersion %]</p>
                <p>Device ID: [% device.id %]</p>
                [% IF debug_msg.defined && debug_msg.size > 0 %]
                    <div class="debug-messages">
                        [% FOREACH msg IN debug_msg %]
                            <p class="debug">Debug: [% msg %]</p>
                        [% END %]
                    </div>
                [% END %]
            </div>
        </div>
    </div>
[% END %]