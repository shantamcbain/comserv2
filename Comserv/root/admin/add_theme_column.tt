[% PageVersion = 'admin/add_theme_column.tt,v 1.0 2024/05/15 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Add Theme Column to Sites Table' %]

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Add Theme Column to Sites Table</h1>
            
            <div class="alert alert-info">
                <p>This action will add the 'theme' column to the 'sites' table in your database.</p>
                <p>This is required for the theme functionality to work properly.</p>
            </div>
            
            <div class="alert alert-warning">
                <p><strong>Warning:</strong> This will modify your database schema. Make sure you have a backup before proceeding.</p>
            </div>
            
            <form method="post" action="[% c.uri_for('/admin/add_theme_column') %]">
                <div class="form-group">
                    <label for="confirm">
                        <input type="checkbox" id="confirm" name="confirm" value="1"> 
                        I confirm that I want to add the 'theme' column to the 'sites' table
                    </label>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add Theme Column</button>
                    <a href="[% c.uri_for('/admin') %]" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>