[% PageVersion = 'Comserv/root/navigation/add_link.tt,v 0.01 2025/01/15 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Add Menu Link' %]

<div class="container">
    <header class="page-header">
        <h1><i class="icon-plus"></i> Add Menu Link</h1>
        <p class="page-description">Add a new link to any menu category in the navigation system.</p>
    </header>

    [% IF c.flash.error_msg %]
        <div class="alert alert-danger">
            <i class="icon-exclamation-triangle"></i> [% c.flash.error_msg %]
        </div>
    [% END %]

    [% IF c.flash.success_msg %]
        <div class="alert alert-success">
            <i class="icon-check"></i> [% c.flash.success_msg %]
        </div>
    [% END %]

    <div class="form-container">
        <form method="POST" action="[% c.uri_for('/navigation/add_link') %]" class="menu-link-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="category" class="form-label">
                        <i class="icon-folder"></i> Menu Category *
                    </label>
                    <select id="category" name="category" class="form-control" required>
                        <option value="">Select a category...</option>
                        <option value="Admin_links"[% IF menu_type == 'admin' %] selected[% END %]>Admin Links</option>
                        <option value="Main_links"[% IF menu_type == 'main' %] selected[% END %]>Main Links</option>
                        <option value="Member_links"[% IF menu_type == 'member' %] selected[% END %]>Member Links</option>
                        <option value="Hosted_link"[% IF menu_type == 'hosted' %] selected[% END %]>Hosted Links</option>
                        <option value="Login_links"[% IF menu_type == 'login' %] selected[% END %]>Login Links</option>
                        <option value="Footer_links"[% IF menu_type == 'footer' %] selected[% END %]>Footer Links</option>
                        <option value="Global_links"[% IF menu_type == 'global' %] selected[% END %]>Global Links</option>
                        <option value="HelpDesk_links"[% IF menu_type == 'helpdesk' %] selected[% END %]>HelpDesk Links</option>
                        <option value="IT_links"[% IF menu_type == 'it' %] selected[% END %]>IT Links</option>
                        <option value="Weather_links"[% IF menu_type == 'weather' %] selected[% END %]>Weather Links</option>
                    </select>
                    <small class="form-help">Choose which menu section this link will appear in</small>
                </div>

                <div class="form-group">
                    <label for="sitename" class="form-label">
                        <i class="icon-globe"></i> Site
                    </label>
                    <select id="sitename" name="sitename" class="form-control">
                        [% IF c.session.SiteName == 'SiteName' || c.session.SiteName == 'CSC' %]
                            <option value="All">All Sites</option>
                            <option value="[% c.session.SiteName %]">[% c.session.SiteName %] (Current Site)</option>
                            <option value="BMaster">BMaster</option>
                            <option value="CSC">CSC</option>
                            <option value="Monashee">Monashee</option>
                            <option value="Forager">Forager</option>
                            <option value="Shanta">Shanta</option>
                            <option value="SunFire">SunFire</option>
                            <option value="USBM">USBM</option>
                            <option value="WB">WeaverBeck</option>
                        [% ELSE %]
                            <option value="[% c.session.SiteName %]">[% c.session.SiteName %] (Current Site Only)</option>
                        [% END %]
                    </select>
                    <small class="form-help">
                        [% IF c.session.SiteName == 'SiteName' || c.session.SiteName == 'CSC' %]
                            Choose which site(s) this link should appear on
                        [% ELSE %]
                            You can only add links to your current site
                        [% END %]
                    </small>
                </div>
            </div>

            <div class="form-group">
                <label for="name" class="form-label">
                    <i class="icon-tag"></i> Link Name *
                </label>
                <input type="text" 
                       id="name" 
                       name="name" 
                       class="form-control" 
                       placeholder="Enter the display name for the link"
                       required
                       maxlength="100">
                <small class="form-help">This is the text that will appear in the menu</small>
            </div>

            <div class="form-group">
                <label for="view_name" class="form-label">
                    <i class="icon-eye"></i> View Name
                </label>
                <input type="text" 
                       id="view_name" 
                       name="view_name" 
                       class="form-control" 
                       placeholder="Optional: Alternative display name"
                       maxlength="100">
                <small class="form-help">Optional: Alternative name for display (defaults to Link Name)</small>
            </div>

            <div class="form-group">
                <label for="url" class="form-label">
                    <i class="icon-link"></i> URL *
                </label>
                <input type="url" 
                       id="url" 
                       name="url" 
                       class="form-control" 
                       placeholder="https://example.com or /internal/path"
                       required
                       maxlength="255">
                <small class="form-help">The web address or internal path for this link</small>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="target" class="form-label">
                        <i class="icon-external-link"></i> Open Link In
                    </label>
                    <select id="target" name="target" class="form-control">
                        <option value="_self">Same Window/Tab</option>
                        <option value="_blank">New Window/Tab</option>
                    </select>
                    <small class="form-help">Choose how the link should open when clicked</small>
                </div>

                <div class="form-group">
                    <label for="page_code" class="form-label">
                        <i class="icon-code"></i> Page Code
                    </label>
                    <input type="text" 
                           id="page_code" 
                           name="page_code" 
                           class="form-control" 
                           placeholder="Optional: Internal page code"
                           maxlength="50">
                    <small class="form-help">Optional: Internal page identifier for legacy systems</small>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="icon-plus"></i> Add Menu Link
                </button>
                <a href="/navigation/manage_links" class="btn btn-secondary">
                    <i class="icon-arrow-left"></i> Back to Manage Links
                </a>
            </div>
        </form>
    </div>

    <div class="info-section">
        <h3><i class="icon-info-circle"></i> Menu Categories</h3>
        <div class="category-grid">
            <div class="category-item">
                <h4>Admin Links</h4>
                <p>Links that appear in the admin dropdown menu</p>
            </div>
            <div class="category-item">
                <h4>Main Links</h4>
                <p>Primary navigation links in the main menu</p>
            </div>
            <div class="category-item">
                <h4>Member Links</h4>
                <p>Links available to logged-in members</p>
            </div>
            <div class="category-item">
                <h4>Hosted Links</h4>
                <p>Links to hosted services and applications</p>
            </div>
            <div class="category-item">
                <h4>Login Links</h4>
                <p>Links that appear in the login dropdown</p>
            </div>
            <div class="category-item">
                <h4>Footer Links</h4>
                <p>Links that appear in the page footer</p>
            </div>
        </div>
    </div>
</div>

<style>
.menu-link-form {
    max-width: 800px;
    margin: 0 auto;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--text-color);
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    font-size: 1rem;
    background-color: var(--bg-color);
    color: var(--text-color);
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(var(--primary-color-rgb), 0.2);
}

.form-help {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.875rem;
    color: var(--text-muted);
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    margin-top: 2rem;
}

.info-section {
    margin-top: 3rem;
    padding: 2rem;
    background-color: var(--card-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
}

.info-section h3 {
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
}

.category-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

.category-item h4 {
    margin-bottom: 0.5rem;
    color: var(--text-color);
}

.category-item p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.875rem;
}

@media (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .category-grid {
        grid-template-columns: 1fr;
    }
}
</style>