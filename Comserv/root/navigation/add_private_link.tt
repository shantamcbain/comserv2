[% PageVersion = 'Comserv/root/navigation/add_private_link.tt,v 0.01 2025/01/15 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Add Private Link' %]

<div class="container">
    <header class="page-header">
        <h1><i class="icon-plus"></i> Add Private Link</h1>
        <p class="page-description">Add a personal link that will appear in your user dropdown menu.</p>
    </header>

    [% IF c.flash.error_msg %]
        <div class="alert alert-danger">
            <i class="icon-exclamation-triangle"></i> [% c.flash.error_msg %]
        </div>
    [% END %]

    [% IF c.flash.success_msg %]
        <div class="alert alert-success">
            <i class="icon-check"></i> [% c.flash.success_msg %]
        </div>
    [% END %]

    <div class="form-container">
        <form method="POST" action="[% c.uri_for('/navigation/add_private_link') %]" class="private-link-form">
            <div class="form-group">
                <label for="name" class="form-label">
                    <i class="icon-tag"></i> Link Name *
                </label>
                <input type="text" 
                       id="name" 
                       name="name" 
                       class="form-control" 
                       placeholder="Enter a descriptive name for your link"
                       required
                       maxlength="100">
                <small class="form-help">This is the text that will appear in your dropdown menu</small>
            </div>

            <div class="form-group">
                <label for="url" class="form-label">
                    <i class="icon-link"></i> URL *
                </label>
                <input type="url" 
                       id="url" 
                       name="url" 
                       class="form-control" 
                       placeholder="https://example.com"
                       required
                       maxlength="255">
                <small class="form-help">The web address you want to link to (must start with http:// or https://)</small>
            </div>

            <div class="form-group">
                <label for="target" class="form-label">
                    <i class="icon-external-link"></i> Open Link In
                </label>
                <select id="target" name="target" class="form-control">
                    <option value="_self">Same Window/Tab</option>
                    <option value="_blank">New Window/Tab</option>
                </select>
                <small class="form-help">Choose how the link should open when clicked</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="icon-plus"></i> Add Private Link
                </button>
                <a href="/navigation/manage_private_links" class="btn btn-secondary">
                    <i class="icon-arrow-left"></i> Back to Manage Links
                </a>
            </div>
        </form>
    </div>

    <div class="info-section">
        <h3><i class="icon-info-circle"></i> About Private Links</h3>
        <ul>
            <li>Private links are only visible to you in your user dropdown menu</li>
            <li>Links are associated with your username and current site</li>
            <li>You can add links to any website or internal application page</li>
            <li>Use descriptive names to easily identify your links</li>
        </ul>
    </div>
</div>

<style>
.private-link-form {
    max-width: 600px;
    margin: 0 auto;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--text-color);
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    font-size: 1rem;
    background-color: var(--bg-color);
    color: var(--text-color);
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(var(--primary-color-rgb), 0.2);
}

.form-help {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.875rem;
    color: var(--text-muted);
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    margin-top: 2rem;
}

.info-section {
    margin-top: 2rem;
    padding: 1.5rem;
    background-color: var(--card-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
}

.info-section h3 {
    margin-top: 0;
    color: var(--primary-color);
}

.info-section ul {
    margin-bottom: 0;
}

.info-section li {
    margin-bottom: 0.5rem;
}
</style>