[% META title = 'HelpDesk' %]
[% PageVersion = 'CSC/HelpDesk.tt,v 0.03 2025/04/18 shanta Exp shanta ' %]

[% IF c.session.debug_mode == 1 %]
 <br>[% PageVersion %]</br>
 [% IF debug_msg.size %]
   <div class="debug-message">
     <ul>
     [% FOREACH msg IN debug_msg %]
       <li>[% msg %]</li>
     [% END %]
     </ul>
   </div>
 [% END %]
[% END %]

<div class="apiary-container">
    <header class="apiary-header">
        [% IF c.session.username %]
            <h1><i class="fas fa-headset"></i> Welcome [% c.session.firstname %] [% c.session.lastname %]!</h1>
        [% ELSE %]
            <h1><i class="fas fa-headset"></i> Computer System Consulting HelpDesk</h1>
        [% END %]
        <div class="apiary-context">
            <span class="context-item"><strong>Support:</strong> Available 24/7</span>
            <span class="context-item"><strong>Status:</strong> <span class="status-active">Online</span></span>
        </div>
    </header>

    <div class="feature-grid">
        <div class="feature-card">
            <div class="feature-header">
                <h3><i class="feature-icon fas fa-ticket-alt"></i>Submit a Ticket</h3>
            </div>
            <div class="feature-content">
                <p>Create a new support ticket for our team to address your issue.</p>
            </div>
            <div class="feature-actions">
                <a href="[% c.uri_for('/HelpDesk/ticket/new') %]" class="btn btn-primary">Create Ticket</a>
            </div>
        </div>
        
        <div class="feature-card">
            <div class="feature-header">
                <h3><i class="feature-icon fas fa-search"></i>Check Ticket Status</h3>
            </div>
            <div class="feature-content">
                <p>View the status of your existing support tickets.</p>
            </div>
            <div class="feature-actions">
                <a href="[% c.uri_for('/HelpDesk/ticket/status') %]" class="btn btn-primary">View Tickets</a>
            </div>
        </div>
        
        <div class="feature-card">
            <div class="feature-header">
                <h3><i class="feature-icon fas fa-book"></i>Knowledge Base</h3>
            </div>
            <div class="feature-content">
                <p>Browse our knowledge base for solutions to common issues.</p>
            </div>
            <div class="feature-actions">
                <a href="[% c.uri_for('/HelpDesk/kb') %]" class="btn btn-primary">Knowledge Base</a>
            </div>
        </div>
        
        <div class="feature-card">
            <div class="feature-header">
                <h3><i class="feature-icon fas fa-phone"></i>Contact Support</h3>
            </div>
            <div class="feature-content">
                <p>Contact our support team directly.</p>
            </div>
            <div class="feature-actions">
                <a href="[% c.uri_for('/HelpDesk/contact') %]" class="btn btn-primary">Contact Us</a>
            </div>
        </div>
    </div>

    <!-- Include the original HelpDesk contents -->
    [% INCLUDE 'CSC/HelpdeskContents.tt' %]
</div>

<!-- Now uses standard apiary-container and feature-card styles from base-containers.css -->
