   <label for="sitename">Site Name:</label><br>
    <select id="sitename" name="sitename" required>
        [% FOREACH site IN sites %]
            [%# Use site.id for both value and comparison to ensure consistency #%]
            <option value="[% site.id %]" [% IF site.id == form_data.sitename OR site.id == session.sitename %]selected[% END %]>[% site.name %]</option>
        [% END %]
    </select>