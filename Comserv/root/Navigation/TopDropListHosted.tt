[% PageVersion = 'Navigation/TopDropListHosted.tt,v 0.01 2024/01/01hanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [%# PageVersion %]
    [%# "Debugging HostName: " _ HostName %]
    [%# INCLUDE 'debug.tt' %]
[% END %]
        <!-- Hosted menu -->
        <li class="horizontal-dropdown">
            <a href="/hosted" class="dropbtn">Hosted</a>
            <div class="dropdown-content">
                <a href="/apply">Apply for Hosted Account</a>
                <a href="/accounts">Hosted Accounts</a>
                <a href="https://shamanbotanicals.ca" target="_blank">shamanbotanicals.ca </a>
                <a href="https://3d.usbm.ca" target="_blank">3d Printing </a>
               <a href="https://3d.local:3000" target="_blank">local 3d Printing </a>                <a href="https://ve7tit.com" target="_blank">ve7tit.com   </a>
                <a href="https://altpowerstore.com" target="_blank">altpowerstore.com</a>
[% IF hosted_links.defined %]
    [% FOREACH link IN hosted_links %]
       <a href="[% link.url %]" name="Contact" target="[%link.target %]"title="[% link.name %] "><font   class="LeftSideBarNavStyle">[% link.name %]</font></a>
      [% IF c.session.group == 'admin' %]
        <a href="/edit_link?link_id=[% link.id %]">Edit/Delete</a>
      [% END %]
    [% END %]
[% END %]
                <!-- Add more hosted options -->
                [% IF c.session.hosted_links.size %]
                    [% FOREACH link IN c.session.hosted_links %]
                        <a href="[% link.url %]">[% link.name %]</a>
                        [% IF c.session.group == 'admin' %]
                            <a href="/edit_link?link_id=[% link.id %]">Edit/Delete</a>
                        [% END %]
                    [% END %]
                [% END %]
                <!-- Private Links Section - Available to ALL logged-in users -->
                [% IF c.user_exists && private_links && private_links.size %]
                    <div class="dropdown-divider"></div>
                    <div class="submenu-section">
                        <span class="submenu-section-title">Private Links</span>
                        [% FOREACH link IN private_links %]
                            <a href="[% link.url %]" target="[% link.target %]" title="[% link.name %]">
                                <i class="icon-link"></i> [% link.name %]
                            </a>
                        [% END %]
                    </div>
                [% END %]
                
                <!-- Link Management -->
                [% IF c.user_exists %]
                    <div class="dropdown-divider"></div>
                    <a href="/navigation/add_private_link"><i class="icon-plus"></i> Add Private Link</a>
                    <a href="/navigation/manage_private_links"><i class="icon-link"></i> Manage Private Links</a>
                [% END %]
                
                [% IF c.session.group == 'admin' %]
                    <div class="dropdown-divider"></div>
                    <a href="/navigation/add_link?menu=hosted"><i class="icon-add"></i> Add Menu Link</a>
                [% END %]
            </div>
        </li>
