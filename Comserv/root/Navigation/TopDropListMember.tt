[% PageVersion = 'Navigation/TopDropListMember.tt,v 0.02 2024/01/17 Shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [%# PageVersion %]
    [%# "Debugging HostName: " _ HostName %]
    [%# INCLUDE 'debug.tt' %]
[% END %]
       <!-- Member menu -->
        <li class="horizontal-dropdown">
            <a href="/membership" class="dropbtn">Member</a>
            <div class="dropdown-content">
                <a href="/membership">Membership Information</a>
                <a href="/applymembership">Apply for Membership</a>
   [% IF member_links.defined %]
       [% FOREACH link IN member_links %]
           <a href="[% link.url %]?site=[% SiteName %]&amp;[% session_string %]&amp;[% link.view_name %]" name="Contact" target="[% link.target %]" title=" [% link.name %] ">[% link.name %]</a>
       [% END %]
    [% END %]
    
    [% IF member_pages.defined %]
       [% FOREACH link IN member_pages %]
           <a href="/page?site=[% SiteName %]&amp;session=[% session_string %]&amp;page=[% link.page_code %]" name="Contact" target="[% link.target %]" title=" [% link.view_name %] ">[% link.view_name %]</a>
           [% IF c.session.group == 'admin' %]
               <a href="/edit_link?link_id=[% link.id %]">Edit/Delete</a>
           [% END %]
       [% END %]
    [% END %]
                <!-- Add more member options -->
                [% IF c.session.member_links.size %]
                    [% FOREACH link IN c.session.member_links %]
                        <a href="[% link.url %]">[% link.name %]</a>
                        [% IF c.session.group == 'admin' %]
                            <a href="/edit_link?link_id=[% link.id %]">Edit/Delete</a>
                        [% END %]
                    [% END %]
                [% END %]
                <!-- Link to the list of herbs -->
                <a href="/ENCY/BotanicalNameView">List of Herbs</a>
                
                <!-- Private Links Section - Available to ALL logged-in users -->
                [% IF c.user_exists && private_links && private_links.size %]
                    <div class="dropdown-divider"></div>
                    <div class="submenu-section">
                        <span class="submenu-section-title">Private Links</span>
                        [% FOREACH link IN private_links %]
                            <a href="[% link.url %]" target="[% link.target %]" title="[% link.name %]">
                                <i class="icon-link"></i> [% link.name %]
                            </a>
                        [% END %]
                    </div>
                [% END %]
                
                <!-- Link Management -->
                [% IF c.user_exists %]
                    <div class="dropdown-divider"></div>
                    <a href="/navigation/add_private_link"><i class="icon-plus"></i> Add Private Link</a>
                    <a href="/navigation/manage_private_links"><i class="icon-link"></i> Manage Private Links</a>
                [% END %]
                
                [% IF c.session.group == 'admin' %]
                    <div class="dropdown-divider"></div>
                    <a href="/navigation/add_link?menu=member"><i class="icon-add"></i> Add Menu Link</a>
                [% END %]
            </div>
        </li>