[% PageVersion = 'Navigation/TopDropListMember.tt,v 0.02 2024/01/17 Shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [%# PageVersion %]
    [%# "Debugging HostName: " _ HostName %]
    [%# INCLUDE 'debug.tt' %]
[% END %]
       <!-- Member menu -->
        <li class="horizontal-dropdown">
            <a href="/membership" class="dropbtn">Member</a>
            <div class="dropdown-content">
                <a href="[% c.uri_for('/membership') %]">Membership Information</a>
                <a href="[% c.uri_for('/applymembership') %]">Apply for Membership</a>
   [% FOREACH link = c.stash.dbi.query("SELECT * FROM internal_links_tb
                                  WHERE  category = 'Member_links'
                                   AND (sitename =  '$SiteName')
                                  ORDER BY link_order
                                  ")%]

       <a href="[% c.uri_for(link.url) %]?site=[% SiteName %]&amp;[% session_string %]&amp;[% link.view_name %]" name="Contact" target="[% link.target %]" title=" [% link.name %] ">[% link.name %]</a>

    [% END %]
 [% FOREACH link = c.stash.dbi.query("SELECT * FROM page_tb
                                   WHERE  menu = 'member'
                                   AND share  = 2
                                   AND (sitename =  '$SiteName' )
                                   ORDER BY link_order
                                   ")%]

     <a href="[% c.uri_for('/page', { site => SiteName, session => session_string, page => link.page_code }) %]" name="Contact" target="[% link.target %]" title=" [% link.view_name %] ">[% link.view_name %]</a>
         [% IF c.session.group == 'admin' %]
        <a href="[% c.uri_for('/edit_link', { link_id => link.id }) %]">Edit/Delete</a>
        [% END %]
         [% END %]
                <!-- Add more member options -->
                [% IF c.session.member_links.size %]
                [% END %]
                [% IF c.session.group == 'admin' %]
                [% END %]
                    <a href="[% c.uri_for('/add_link', { menu => 'member' }) %]">Add</a>
                    [% FOREACH link IN c.session.member_links %]
                        <a href="[% c.uri_for(link.url) %]">[% link.name %]</a>
                        [% IF c.session.group == 'admin' %]
                        [% END %]
                            <a href="[% c.uri_for('/edit_link', { link_id => link.id }) %]">Edit/Delete</a>
                    [% END %]
                <!-- Link to the list of herbs -->
                <a href="[% c.uri_for('/ENCY/BotanicalNameView') %]">List of Herbs</a>
            </div>
        </li>