[% PageVersion = 'Comserv/root/navigation/edit_private_link.tt,v 0.01 2025/01/15 shanta Exp shanta ' %]
[% IF c.session.debug_mode == 1 %]
    [% PageVersion %]
[% END %]

[% META title = 'Edit Private Link' %]

<div class="container">
    <header class="page-header">
        <h1><i class="icon-edit"></i> Edit Private Link</h1>
        <p class="page-description">Update your personal link that appears in your user dropdown menu.</p>
    </header>

    [% IF c.flash.error_msg %]
        <div class="alert alert-danger">
            <i class="icon-exclamation-triangle"></i> [% c.flash.error_msg %]
        </div>
    [% END %]

    [% IF c.flash.success_msg %]
        <div class="alert alert-success">
            <i class="icon-check"></i> [% c.flash.success_msg %]
        </div>
    [% END %]

    <div class="card">
        <div class="card-body">
            <form method="POST" action="[% c.uri_for('/navigation/edit_private_link', link.id) %]">
                <div class="mb-3">
                    <label for="name" class="form-label">
                        <i class="icon-tag"></i> Link Name *
                    </label>
                    <input type="text" 
                           id="name" 
                           name="name" 
                           class="form-control" 
                           placeholder="Enter a descriptive name for your link"
                           value="[% link.name | html %]"
                           required
                           maxlength="100">
                    <div class="form-text">This is the text that will appear in your dropdown menu</div>
                </div>

                <div class="mb-3">
                    <label for="url" class="form-label">
                        <i class="icon-link"></i> URL *
                    </label>
                    <input type="url" 
                           id="url" 
                           name="url" 
                           class="form-control" 
                           placeholder="https://example.com"
                           value="[% link.url | html %]"
                           required
                           maxlength="255">
                    <div class="form-text">The web address you want to link to (must start with http:// or https://)</div>
                </div>

                <div class="mb-3">
                    <label for="target" class="form-label">
                        <i class="icon-external-link"></i> Open Link In
                    </label>
                    <select id="target" name="target" class="form-select">
                        <option value="_self" [% IF link.target == '_self' %]selected[% END %]>Same Window/Tab</option>
                        <option value="_blank" [% IF link.target == '_blank' %]selected[% END %]>New Window/Tab</option>
                    </select>
                    <div class="form-text">Choose how the link should open when clicked</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="icon-save"></i> Update Private Link
                    </button>
                    <a href="/navigation/manage_private_links" class="btn btn-info">
                        <i class="icon-arrow-left"></i> Back to Manage Links
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h3><i class="icon-info-circle"></i> About Private Links</h3>
        </div>
        <div class="card-body">
            <ul class="mb-0">
                <li>Private links are only visible to you in your user dropdown menu</li>
                <li>Links are associated with your username and current site</li>
                <li>You can add links to any website or internal application page</li>
                <li>Use descriptive names to easily identify your links</li>
            </ul>
        </div>
    </div>
</div>

