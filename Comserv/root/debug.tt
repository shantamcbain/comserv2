[% META title = 'Projects Documentation' %]
[% PageVersion = 'Documentation/Projects.tt,v 0.01 2024/05/28 Shanta Exp shanta ' %]Debug Information


Debug Errors

[% IF c.stash.debug_errors %]
    <h2>Debugging Information</h2>
    <ul>
        <!-- Iterate over each error and display it in a list item -->
        [% FOREACH error IN c.stash.debug_errors %]
            <li>[% error | html %]</li>
        [% END %]
    </ul>
[% ELSE %]
    <p>No debug errors.</p>
[% END %]

<h2>Stash Information</h2>
<ul>
    <!-- Iterate over each key in the stash and display its value -->
    [% FOREACH key IN c.stash.keys.sort %]
        <li>
            <strong>[% key %]:</strong>
            [% IF ref(c.stash.$key) == 'ARRAY' %]
                [% Dumper(c.stash.$key) | html %]
            [% ELSE %]
                [% c.stash.$key | html %]
            [% END %]
        </li>
    [% END %]
</ul>

<h2>Session Information</h2>
<ul>
    <!-- Iterate over each key in the session and display its value -->
    [% FOREACH key IN c.session.keys.sort %]
        <li>
            <strong>[% key %]:</strong>
            [% IF ref(c.session.$key) == 'ARRAY' %]
                [% Dumper(c.session.$key) | html %]
            [% ELSE %]
                [% c.session.$key | html %]
            [% END %]
        </li>
    [% END %]
</ul>
