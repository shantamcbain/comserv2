[% PageVersion = 'cloudflare/index.tt,v 0.01 2025/06/01 shanta Exp shanta ' %]
[% IF debug_mode == 1 %]
    [% PageVersion %]
[% END %]

<div class="cloudflare-dashboard">
    <h1>Cloudflare DNS Management</h1>
    
    <div class="dashboard-intro">
        <p>Welcome to the Cloudflare DNS Management interface. This tool allows you to manage DNS records for your domains through Cloudflare.</p>
        
        <div class="admin-actions">
            <a href="[% c.uri_for('/ApiCredentials') %]" class="btn btn-info">
                <i class="icon-key"></i> Manage API Credentials
            </a>
            <p class="admin-note">Note: You need to configure your Cloudflare API credentials before using this tool.</p>
        </div>
    </div>
    
    <div class="domain-selection">
        <h2>Select a Domain</h2>
        
        [% IF sites && sites.size %]
            <div class="site-list">
                [% FOREACH site IN sites %]
                    <div class="site-card">
                        <h3>[% site.name %]</h3>
                        <div class="domain-list">
                            [% IF site.domains && site.domains.size %]
                                <ul>
                                [% FOREACH domain IN site.domains %]
                                    <li>
                                        [% IF domain.is_on_cloudflare %]
                                            <a href="[% c.uri_for('/cloudflareapi/dns/' _ domain.domain) %]" class="domain-link cloudflare-domain">
                                                [% domain.domain %]
                                                <span class="cloudflare-badge">Cloudflare</span>
                                            </a>
                                        [% ELSE %]
                                            <span class="domain-text">[% domain.domain %]</span>
                                        [% END %]
                                    </li>
                                [% END %]
                                </ul>
                            [% ELSE %]
                                <p class="no-domains">No domains configured for this site.</p>
                            [% END %]
                        </div>
                    </div>
                [% END %]
            </div>
        [% ELSE %]
            <div class="no-sites-message">
                <p>No sites available. Please contact your administrator to set up sites and domains.</p>
            </div>
        [% END %]
    </div>
    
    <!-- SiteName Domain Mappings Section -->
    <div class="sitename-mappings">
        <h2>SiteName Domain Mappings</h2>
        
        [% IF site_names && site_names.size %]
            <div class="sitename-grid">
                [% FOREACH sitename IN site_names %]
                    <div class="sitename-card">
                        <h3>[% sitename.name %]</h3>
                        <div class="domain-list">
                            [% IF sitename.domains && sitename.domains.size %]
                                <ul>
                                [% FOREACH domain IN sitename.domains %]
                                    <li>
                                        [% IF domain.is_on_cloudflare %]
                                            <a href="[% c.uri_for('/cloudflareapi/dns/' _ domain.domain) %]" class="domain-link cloudflare-domain">
                                                [% domain.domain %]
                                                <span class="cloudflare-badge">Cloudflare</span>
                                            </a>
                                        [% ELSE %]
                                            <span class="domain-text">[% domain.domain %]</span>
                                        [% END %]
                                    </li>
                                [% END %]
                                </ul>
                            [% ELSE %]
                                <p class="no-domains">No domains configured for this site.</p>
                            [% END %]
                        </div>
                    </div>
                [% END %]
            </div>
        [% ELSE %]
            <div class="no-sitenames-message">
                <p>No SiteName domain mappings available. Please contact your administrator to set up site names and domains.</p>
            </div>
        [% END %]
    </div>
    
    <div class="manual-domain-entry">
        <h2>Enter Domain Manually</h2>
        <form action="[% c.uri_for('/cloudflareapi/dns') %]" method="GET" class="domain-form">
            <div class="form-group">
                <label for="domain">Domain:</label>
                <input type="text" id="domain" name="domain" placeholder="example.com" required>
            </div>
            <button type="submit" class="btn btn-primary">Manage DNS</button>
        </form>
    </div>
</div>

