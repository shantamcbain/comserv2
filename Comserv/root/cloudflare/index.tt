    }
    
    .table th, .table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    
    .table th {
        background-color: #f8f9fa;
        font-weight: bold;
        color: #343a40;
    }
    
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,0.02);
    }
    
    .no-domain {
        color: #6c757d;
        font-style: italic;
    }
    
    .domain-list-compact {
        list-style-type: none;
        padding-left: 0;
        margin-bottom: 0;
    }
    
    .domain-list-compact li {
        margin-bottom: 4px;
        padding: 2px 0;
    }
    
    .btn-sm {
        padding: 4px 8px;
        font-size: 0.875rem;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    
    .disabled {
        opacity: 0.65;
        cursor: not-allowed;
    }
    
    .no-sitenames-message {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
        color: #6c757d;
        font-style: italic;
    }
</style>